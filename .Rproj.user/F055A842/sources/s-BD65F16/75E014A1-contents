# PrintTimestamp
PrintTimestamp <- function(unix_tmstmp) {
  message("")
  message(". =====================\t.")
  message("|  Decoding UNIX\t|")
  message("|    timestamp  \t|")
  message("|==========================================\t.")
  message("|        UNIX ts\t= ",unix_tmstmp,"           \t|")
  message("|==================.=======================\t|")
  message("|           Date\t|  ",anydate(unix_tmstmp),"\t\t|")
  message("|      Date-time\t|  ",anytime(unix_tmstmp),"\t|")
  message("'=================='=======================\t'")
}





