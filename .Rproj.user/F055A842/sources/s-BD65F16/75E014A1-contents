PrintInputSuccess <- function(InputTitle="[CheckupApp input]") {
  message("")
  message("   |")
  message("   |   Reading...")
  message("   |   input...")
  message("   |")
  message(" \\ | /")
  message("   V")
  message(InputTitle)
  message("")
  message("Success.\t\t(100%)")
}